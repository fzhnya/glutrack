<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:background="#fde8e9"
    tools:context=".MainActivity">

    <!-- ScrollView untuk membuat konten dapat digulir -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <!-- Wrapper LinearLayout untuk konten -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">



            <GridLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:rowCount="1"
                android:columnCount="1"
                android:alignmentMode="alignMargins"
                android:layout_gravity="center"
                android:layout_margin="2dp">

                <!-- Card 1: Rekaman -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="1dp">

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/apa"
                            android:contentDescription="diabetes"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 2: Konsultasi -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="480dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pengetahuan Dasar tentang Diabetes: \n \n "
                            android:textColor="#888"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="8dp"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Diabetes adalah penyakit kronis yang memengaruhi kemampuan tubuh dalam mengatur kadar gula darah. Terdapat beberapa jenis diabetes, yaitu diabetes tipe 1, tipe 2, dan gestasional. Diabetes tipe 1 disebabkan oleh ketidakmampuan tubuh memproduksi insulin, hormon yang mengatur kadar gula darah, dan umumnya terjadi pada usia muda. Diabetes tipe 2, yang lebih umum pada orang dewasa, terjadi ketika tubuh tidak cukup menghasilkan insulin atau tidak dapat menggunakannya dengan efektif. Gestasional diabetes adalah jenis yang terjadi pada wanita hamil dan bisa menghilang setelah persalinan, meskipun meningkatkan risiko diabetes tipe 2 di kemudian hari. "
                            android:textColor="#888"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>

