<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDE8E9"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- GULA MINDER Title -->
            <TextView
                android:id="@+id/tv_gula_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRACKER"
                android:gravity="start"
                android:textSize="26sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginTop="10dp" />

            <!-- Header Section -->
            <LinearLayout
                android:id="@+id/headerSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="2">

                <!-- Recent Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terakhir"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/recentValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80.0 mg/dL"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oct 29, 01:46"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Average Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rata-rata"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/averageValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="83.3 mg/dL"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min: 80.0 - Max: 100.0"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- ImageView untuk mengganti chart -->
            <ImageView
                android:id="@+id/imageChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/tracker"
                android:scaleType="fitXY" />

            <!-- Add Button -->
            <Button
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:backgroundTint="#FF4D4D"
                android:text="+ TAMBAH"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_gravity="center_horizontal" />

            <!-- List of Entries -->
            <LinearLayout
                android:id="@+id/listEntries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Individual Entry Template -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="80.0 mg/dL"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:drawableStart="@drawable/ic_circle_green"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal â€¢ Default"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oct 29, 01:46"
                        android:textSize="11sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>
